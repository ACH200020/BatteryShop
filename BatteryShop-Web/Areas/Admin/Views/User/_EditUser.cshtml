@model CoreLayer.DTOs.User.EditUserDto
<form asp-area="admin" asp-controller="User" asp-action="Edit" method="post">
    @Html.HiddenFor(m=>m.Id)
    <div class="row">
        <div class="col-md-6">
            @Html.EditorFor(m => m.Name)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(m => m.Family)
        </div>

        <div class="col-md-6">
            @Html.EditorFor(m => m.UserRole)
        </div>
        
        
    </div>
    <button type="submit" class="btn btn-success">Edit</button>
</form>