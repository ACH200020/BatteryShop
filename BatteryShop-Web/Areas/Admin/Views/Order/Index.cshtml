@model BatteryShop_Web.Areas.Admin.Models.Order.ListOrderViewModel
@{
    ViewData["title"] = "مدیریت خریدها";
    ViewData["selected"] = "order";
    var counter = 1;
}
<section class="content-header">
    <h1>
        @ViewData["title"]
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                <i class="fa fa-dashboard"></i> خانه
            </a>
        </li>
        <li class="active">@ViewData["title"]</li>
    </ol>
</section>
<section class="content">

    <div class="box box-primary ">
        <div class="box-body p-0">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>شماره تماس</th>
                    <th>نام و نام خانوادگی</th>
                    <th>نام محصول</th>
                    <th>تعداد</th>
                    <th>زمان پرداخت</th>
                    <th>عملیات</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.OrderDtos)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@item.User.PhoneNumber</td>
                        <td> @(item.User.Name + " " + item.User.Family)</td>
                        <td> @item.Product.Title</td>
                        <td> @item.Count</td>
                        <td> @item.PaymentTime</td>
                        

                        <td>
                            <open-modal title="ویرایش وضعیت محصول"
                                        url="@Url.Action("ShowEditModal", "Order", new { orderId = item.Id })">
                                ویرایش
                            </open-modal>
                        </td>
                    </tr>
                    counter += 1;
                }
                </tbody>
            </table>
        </div>
    </div>
</section>