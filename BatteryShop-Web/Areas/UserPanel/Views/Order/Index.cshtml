@model BatteryShop_Web.Areas.UserPanel.Models.Order.ListOrderVIewModel
@{
    ViewData["title"] = "خرید های انجام شده";
    ViewData["selected"] = "ordered";
    var counter = 1;

}
<section class="content-header">
    <h1>
        @ViewData["title"]
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="UserPanel" asp-controller="" asp-action="Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">@ViewData["title"]</li>
    </ol>
</section>
<section class="content">

    <div class="box box-primary ">
        <div class="box-body p-0">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>محصول</th>
                        <th>تعداد</th>
                        <th>آدرس ارسال شده</th>
                        <th>زمان</th>
                        <th>نهایی شد</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDtos)
                    {
                        <tr>
                            <td>@counter</td>
                           
                            <td>@item.Product.Title</td>
                            <td>@item.Count</td>
                            <td>@item.Address</td>
                            <td>@item.PaymentTime</td>
                            <td>@item.IsFinally</td>

                        </tr>

                        counter += 1;
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>