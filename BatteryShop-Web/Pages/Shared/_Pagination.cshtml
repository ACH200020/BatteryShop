
@model CoreLayer.Utilities.BasePagination

@if (Model.PageCount > 1)
{
    <div class="row my-5">

        <div class="col justify-content-center d-flex">

            <nav aria-label="Page navigation example">
                <ul class="pagination mb-0" >
                    @if (Model.CurrentPage > 1)
                    {
                        <li class="page-item previous">
                            <a onclick="changePage(@(Model.CurrentPage-1))" class="page-link px-3 mx-2" href="#" aria-label="Previous">
                                <img src="images/icons/arrow-right.svg" alt="">
                            </a>
                        </li>
                    }
                    @*else
                    {
                        <li class="page-item previous disabled">
                            <a class="page-link px-3 mx-2" href="#" aria-label="Previous">
                                <img src="images/icons/arrow-right.svg" alt="">
                            </a>
                        </li>
                    }*@
                    @for (var i = Model.StartPage; i <= Model.EndPage; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : null)">
                            <a onclick="changePage(@i)" href="javascript:void(0)" class="page-link fw-bold px-3 mx-1">@i</a>
                        </li>
                    }
                    @if (Model.PageCount > Model.CurrentPage)
                    {
                        <li class="page-item next">
                            <a onclick="changePage(@(Model.CurrentPage+1))" class="page-link px-3 mx-2" href="#" aria-label="Next">
                                <img src="images/icons/arrow-left.svg" alt="">
                            </a>
                        </li>
                    }
                    @*else
                    {
                        <li class="page-item next disabled">
                            <a class="page-link px-3 mx-2 " href="javascript:void(0)" aria-label="Next">
                                <img src="images/icons/arrow-left.svg" alt="">
                            </a>
                        </li>
                    }*@
                </ul>
            </nav>

        </div>

    </div>
}