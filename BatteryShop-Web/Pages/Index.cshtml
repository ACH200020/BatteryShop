@page
@using CoreLayer.Utilities
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<main class="my-5">

    <div class="container">

        <div class="row justify-content-center">

            <div class="col-12">

                <div class="banner__top__lg">

                    <a href="#">
                        <img src="images/banners/banner-top-lg.png" class="img-fluid" alt="">
                    </a>

                </div>

            </div>


            <div class="col-10">

                <div class="slogan slogan__bg__glass w-100 d-none d-sm-block">

                    <div class="row">

                        <div class="col-6 col-lg-3 align-items-center d-flex">


                            <div class="slogan__item mx-auto text-center py-3">
                                <img src="images/icons/warranty(1).svg" alt="">
                                <p class="my-3">
                                    ضمانت اصالت کالا
                                </p>
                            </div>


                        </div>


                        <div class="col-6 col-lg-3 align-items-center d-flex">


                            <div class="slogan__item mx-auto text-center py-3">
                                <img src="images/icons/exchange.svg" alt="">
