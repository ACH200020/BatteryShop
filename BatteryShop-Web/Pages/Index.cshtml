                                                        </div>

                                                    </div>

                                                    <div class="col-12">

                                                        <div class="row g-2">

                                                            <div class="col-12">
                                                                <a asp-page="product" asp-route-slug="@product.Slug" class="card-title fw-bold">
                                                                    @product.Title
                                                                </a>
                                                            </div>

                                                            <div class="col-7">
                                                                <div class="d-inline-block align-items-center d-flex">

                                                                    <p class="header__cart__price float-start text-decoration-line-through mb-0">
                                                                        @product.Price.ToString("0,0")
