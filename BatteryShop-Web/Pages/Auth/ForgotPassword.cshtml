@page
@model BatteryShop_Web.Pages.Auth.ForgotPasswordModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "فراموش رمز عبور";
}
<!-- Login page -->
<div class="login_wrapper">
    <div class="login_box">
        <h3 style="margin: 10px auto; color: #FF574D">فراموشی رمز عبور</h3>
            
        
        <div class="login_form">
            <div class="login_form_inner">
               
                <form method="post">
                    <div class="form-group">
                        <input asp-for="NationalCode" type="text" name="nationalcode" class="input-text" placeholder="کدملی">
                        <span asp-validation-for="NationalCode" style="color: red"></span>

                    </div>
                   
                    
                    <div class="form-group">
                        <button type="submit" class="btn-md btn-theme btn-block">ورود<i class="fa fa-arrow-left"></i></button>
                    </div>
                </form>
            </div>
           
        </div>
    </div>
</div>